      border-radius: 25px;
      overflow: hidden;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      background: rgba(0, 0, 0, 0.4);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }

    .video-card:hover {
      transform: translateY(-10px) scale(1.02);
      box-shadow:
        0 30px 80px rgba(0, 0, 0, 0.6),
        0 0 40px rgba(201, 169, 97, 0.3);
      border-color: var(--color-accent);
    }

    .video-wrapper {
      position: relative;
      padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
      height: 0;
      overflow: hidden;
    }

    .video-overlay {
      position: absolute;
      top: 20px;
      left: 20px;
      z-index: 10;
    }

    .video-badge {
      display: inline-block;
      padding: 0.5rem 1rem;
      background: rgba(201, 169, 97, 0.9);
      backdrop-filter: blur(10px);
      color: var(--color-white);
      border-radius: 50px;
      font-size: 0.85rem;
      font-weight: 600;
      letter-spacing: 0.05em;
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
    }

    .video-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: var(--spacing-md);
    }

    .video-small .video-wrapper {
      padding-bottom: 75%; /* 4:3 for smaller videos */
    }

    /* Text Testimonials */
    .text-testimonials {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: var(--spacing-lg);
      margin-bottom: var(--spacing-xl);
      position: relative;
      z-index: 2;
    }

    .testimonial-card {
      position: relative;
      background: linear-gradient(
        135deg,
        rgba(255, 255, 255, 0.08) 0%,
        rgba(255, 255, 255, 0.03) 100%
      );
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.15);
      border-radius: 30px;
      padding: var(--spacing-lg);
      transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
      overflow: hidden;
      cursor: pointer;
    }

    .testimonial-card::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(
        135deg,
        rgba(74, 144, 164, 0.1) 0%,
        rgba(201, 169, 97, 0.1) 100%
      );
      opacity: 0;
      transition: opacity 0.6s ease;
      z-index: 0;
    }

    .testimonial-card:hover {
      transform: translateY(-15px) scale(1.03);
      border-color: var(--color-accent);
      box-shadow:
        0 25px 70px rgba(0, 0, 0, 0.6),
        0 0 50px rgba(201, 169, 97, 0.25),
        inset 0 1px 0 rgba(255, 255, 255, 0.3);
    }

    .testimonial-card:hover::before {
      opacity: 1;
    }

    .testimonial-glow {
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(
        circle,
        rgba(201, 169, 97, 0.2) 0%,
        transparent 70%
      );
      opacity: 0;
      transition: opacity 0.6s ease;
      pointer-events: none;
      animation: rotate-glow 8s linear infinite;
    }

    .testimonial-card:hover .testimonial-glow {
      opacity: 1;
    }

    .quote-icon {
      position: absolute;
      top: 20px;
      right: 30px;
      font-size: 6rem;
      color: rgba(201, 169, 97, 0.15);
      font-family: Georgia, serif;
      line-height: 1;
      z-index: 0;
      transition: all 0.6s ease;
    }

    .testimonial-card:hover .quote-icon {
      color: rgba(201, 169, 97, 0.25);
      transform: scale(1.2) rotate(5deg);
    }

    .testimonial-content {
      position: relative;
      z-index: 2;
    }

    .testimonial-text {
      font-size: 1.05rem;
      line-height: 1.9;
      color: rgba(255, 255, 255, 0.95);
      margin-bottom: var(--spacing-lg);
      font-style: italic;
    }

    .testimonial-author {
      display: flex;
      align-items: center;
      gap: var(--spacing-md);
      padding-top: var(--spacing-md);
      border-top: 1px solid rgba(255, 255, 255, 0.1);
    }

    .author-avatar {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background: linear-gradient(
        135deg,
        var(--color-primary),
        var(--color-accent)
      );
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.5rem;
      font-weight: 600;
      color: var(--color-white);
      box-shadow: 0 5px 20px rgba(0, 0, 0, 0.3);
      transition: all 0.3s ease;
    }

    .testimonial-card:hover .author-avatar {
      transform: scale(1.1) rotate(5deg);
      box-shadow: 0 8px 30px rgba(201, 169, 97, 0.5);
    }

    .author-info {
      flex: 1;
    }

    .author-name {
      font-size: 1.1rem;
      color: var(--color-white);
      font-weight: 600;
      margin-bottom: 0.25rem;
    }

    .author-location {
      font-size: 0.9rem;
      color: rgba(255, 255, 255, 0.6);
    }

    /* Staggered animations for testimonials */
    .testimonial-card {
      opacity: 0;
      animation: fadeInScale 0.8s ease forwards;
    }

    .testimonial-1 {
      animation-delay: 0.1s;
    }
    .testimonial-2 {
      animation-delay: 0.2s;
    }
    .testimonial-3 {
      animation-delay: 0.3s;
    }
    .testimonial-4 {
      animation-delay: 0.4s;
    }
    .testimonial-5 {
      animation-delay: 0.5s;
    }
    .testimonial-6 {
      animation-delay: 0.6s;
    }

    /* Testimonials CTA */
    .testimonials-cta {
      text-align: center;
      margin-top: var(--spacing-xl);
      padding: var(--spacing-lg);
      background: rgba(255, 255, 255, 0.05);
      backdrop-filter: blur(10px);
      border-radius: 30px;
      border: 1px solid rgba(255, 255, 255, 0.1);
      position: relative;
      z-index: 2;
    }

    .cta-text {
      font-size: 1.5rem;
      color: var(--color-white);
      margin-bottom: var(--spacing-md);
      font-family: var(--font-primary);
    }

    .cta-button-testimonials {
      display: inline-block;
      padding: 1.2rem 3rem;
      background: linear-gradient(135deg, var(--color-accent) 0%, #d4b970 100%);
      color: var(--color-white);
      text-decoration: none;
      border-radius: 50px;
      font-size: 1.2rem;
      font-weight: 600;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 10px 40px rgba(201, 169, 97, 0.4);
      position: relative;
      overflow: hidden;
    }

    .cta-button-testimonials::before {
      content: "";
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        90deg,
        transparent,
        rgba(255, 255, 255, 0.3),
        transparent
      );
      transition: left 0.5s ease;
    }

    .cta-button-testimonials:hover::before {
      left: 100%;
    }

    .cta-button-testimonials:hover {
      transform: translateY(-5px) scale(1.05);
      box-shadow: 0 20px 60px rgba(201, 169, 97, 0.6);
    }

    /* Responsive for testimonials */
    @media (max-width: 768px) {
      .text-testimonials {
        grid-template-columns: 1fr;
        gap: var(--spacing-md);
      }

      .video-grid {
        grid-template-columns: 1fr;
      }

      .testimonial-text {
        font-size: 1rem;
      }

      .quote-icon {
        font-size: 4rem;
        top: 15px;
        right: 20px;
      }

      .cta-text {
        font-size: 1.2rem;
      }

      .cta-button-testimonials {
        padding: 1rem 2rem;
        font-size: 1rem;
      }

      .orb-1,
      .orb-2,
      .orb-3 {
        opacity: 0.2;
      }
