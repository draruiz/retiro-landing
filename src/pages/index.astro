            // Cast event to any to access clientX/Y without TS errors
            const mouseEvent = e;
            const { left, top, width, height } = hero.getBoundingClientRect();
            const x = (mouseEvent.clientX - left) / width - 0.5;
            const y = (mouseEvent.clientY - top) / height - 0.5;

