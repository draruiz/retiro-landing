      margin-bottom: 2rem;
      line-height: 1.4;
      letter-spacing: 1px;
    }

    .message-text {
      font-family: var(--font-secondary);
      font-size: 1.2rem;
      font-weight: 300;
      margin-bottom: 1.5rem;
      line-height: 1.9;
      color: rgba(255, 255, 255, 0.75);
      letter-spacing: 0.3px;
    }

    .message-highlight {
      font-family: var(--font-secondary);
      font-size: 1.3rem;
      font-style: italic;
