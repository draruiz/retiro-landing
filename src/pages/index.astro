      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
    }

    .why-card:hover::before {
      opacity: 1;
    }

    .card-glow {
      position: absolute;
      top: -50%;
      left: -50%;
      width: 200%;
      height: 200%;
      background: radial-gradient(
        circle,
        rgba(201, 169, 97, 0.15) 0%,
        transparent 70%
      );
      opacity: 0;
      transition: opacity 0.5s ease;
      pointer-events: none;
    }

    .why-card:hover .card-glow {
      opacity: 1;
      animation: rotate-glow 4s linear infinite;
    }

    @keyframes rotate-glow {
      0% {
        transform: rotate(0deg);
      }
      100% {
        transform: rotate(360deg);
      }
    }

    .card-number {
      position: absolute;
      top: -20px;
      right: 20px;
      font-size: 6rem;
      font-weight: 700;
      color: rgba(201, 169, 97, 0.1);
      font-family: var(--font-primary);
      line-height: 1;
      transition: all 0.5s ease;
      z-index: 0;
    }

    .why-card:hover .card-number {
      color: rgba(201, 169, 97, 0.2);
      transform: scale(1.1);
    }

    .card-content {
      position: relative;
      z-index: 2;
    }

    .card-icon-large {
      font-size: 4rem;
      margin-bottom: var(--spacing-md);
      filter: drop-shadow(0 0 20px rgba(201, 169, 97, 0.3));
      animation: float-icon 3s ease-in-out infinite;
    }

    @keyframes float-icon {
      0%,
      100% {
        transform: translateY(0) rotate(0deg);
      }
      50% {
        transform: translateY(-15px) rotate(5deg);
      }
    }

    .why-card:hover .card-icon-large {
      animation: float-icon-hover 1s ease-in-out infinite;
    }

    @keyframes float-icon-hover {
      0%,
      100% {
        transform: translateY(0) scale(1) rotate(0deg);
      }
      50% {
        transform: translateY(-10px) scale(1.1) rotate(-5deg);
      }
    }

    .card-content p {
      font-family: var(--font-secondary);
      color: rgba(255, 255, 255, 0.7);
      font-size: 1.05rem;
      font-weight: 300;
      line-height: 1.9;
      letter-spacing: 0.3px;
      position: relative;
    }

    .card-content strong {
      color: rgba(255, 255, 255, 0.95);
      font-weight: 400;
    }

    /* Staggered animation on scroll */
    .why-card {
      opacity: 0;
      animation: fadeInScale 0.8s ease forwards;
    }

    .card-1 {
      animation-delay: 0.1s;
    }
    .card-2 {
      animation-delay: 0.2s;
    }
    .card-3 {
      animation-delay: 0.3s;
    }
    .card-4 {
      animation-delay: 0.4s;
    }
    .card-5 {
      animation-delay: 0.5s;
    }
    .card-6 {
      animation-delay: 0.6s;
    }

    @keyframes fadeInScale {
      from {
        opacity: 0;
        transform: scale(0.9) translateY(30px);
      }
      to {
        opacity: 1;
        transform: scale(1) translateY(0);
      }
    }

    /* Message Section */
    .message-section {
      padding: 8rem 0;
      background: rgba(15, 15, 20, 0.5);
      color: rgba(255, 255, 255, 0.95);
      text-align: center;
      position: relative;
    }

    .message-section::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(
