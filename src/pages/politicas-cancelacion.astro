<style>
  @import url("https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Inter:wght@300;400;500;600&display=swap");

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  /* Navbar Styles - Luxury style */
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(10, 10, 15, 0.95);
    backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    z-index: 1000;
    transition: all 0.3s ease;
  }

  .navbar-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 1rem 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .navbar-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .navbar-logo-img {
    width: 40px;
    height: 40px;
    object-fit: contain;
  }

  .navbar-brand {
    font-family: "Cormorant Garamond", serif;
    font-size: 1.5rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.95);
    letter-spacing: 1px;
  }

  .navbar-menu {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .navbar-link {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.75);
    font-weight: 300;
    font-size: 0.95rem;
    letter-spacing: 0.5px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
  }

  .navbar-link::after {
    content: "";
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background: linear-gradient(90deg, #c9a961, transparent);
    transition: width 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .navbar-link:hover {
    color: #c9a961;
  }

  .navbar-link:hover::after {
    width: 100%;
  }

  .navbar-cta {
    background: linear-gradient(135deg, #c9a961 0%, #b8944e 100%);
    color: white !important;
    padding: 0.6rem 1.5rem;
    border-radius: 30px;
    font-weight: 600;
  }

  .navbar-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 20px rgba(201, 169, 97, 0.3);
  }

  .navbar-toggle {
    display: none;
    flex-direction: column;
    gap: 5px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
  }

  .hamburger-line {
    width: 25px;
    height: 2px;
    background: rgba(255, 255, 255, 0.8);
    transition: all 0.3s ease;
  }

  /* Main Content */
  .policies-page {
    min-height: 100vh;
    background: #0a0a0f;
  }

  .policies-hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: rgba(255, 255, 255, 0.95);
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    filter: brightness(0.7) contrast(1.1);
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      180deg,
      rgba(10, 10, 15, 0.7) 0%,
      rgba(10, 10, 15, 0.5) 50%,
      rgba(10, 10, 15, 0.9) 100%
    );
  }

  .hero-content {
    position: relative;
    z-index: 10;
    padding: 8rem 2rem;
  }

  .page-title {
    font-family: "Cormorant Garamond", serif;
    font-size: 3.5rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 1.5rem;
    letter-spacing: 2px;
    animation: fadeInDown 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .page-subtitle {
    font-family: "Inter", sans-serif;
    font-size: 1.1rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.65);
    max-width: 600px;
    margin: 0 auto;
    letter-spacing: 0.5px;
    line-height: 1.8;
    animation: fadeInDown 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.2s both;
  }

  .scroll-indicator {
    position: absolute;
    bottom: 3rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.75rem;
    z-index: 10;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.4s both;
  }

  .scroll-indicator span {
    font-family: "Inter", sans-serif;
    font-size: 0.85rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.5);
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .arrow-down {
    width: 1px;
    height: 40px;
    background: linear-gradient(
      to bottom,
      rgba(201, 169, 97, 0.6),
      transparent
    );
    animation: arrowBounce 2s ease-in-out infinite;
  }

  @keyframes arrowBounce {
    0%,
    100% {
      transform: translateY(0);
      opacity: 1;
    }
    50% {
      transform: translateY(10px);
      opacity: 0.5;
    }
  }

  .policies-section {
    padding: 6rem 2rem 8rem;
    background: #0a0a0f;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .intro-text {
    text-align: center;
    margin-bottom: 5rem;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.4s both;
  }

  .intro-text p {
    font-family: "Inter", sans-serif;
    font-size: 1.1rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.9;
    max-width: 700px;
    margin: 0 auto;
    letter-spacing: 0.3px;
  }

  .policies-list {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin-bottom: 5rem;
  }

  .policy-item {
    background: rgba(15, 15, 20, 0.6);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 16px;
    padding: 2.5rem;
    display: flex;
    gap: 2rem;
    align-items: flex-start;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) both;
  }

  .policy-item:nth-child(1) {
    animation-delay: 0.5s;
  }
  .policy-item:nth-child(2) {
    animation-delay: 0.6s;
  }
  .policy-item:nth-child(3) {
    animation-delay: 0.7s;
  }
  .policy-item:nth-child(4) {
    animation-delay: 0.8s;
  }
  .policy-item:nth-child(5) {
    animation-delay: 0.9s;
  }
  .policy-item:nth-child(6) {
    animation-delay: 1s;
  }
  .policy-item:nth-child(7) {
    animation-delay: 1.1s;
  }

  .policy-item::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 0;
    height: 100%;
    background: linear-gradient(180deg, #c9a961 0%, #b8944e 100%);
    transition: width 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .policy-item:hover {
    transform: translateY(-4px);
    border-color: rgba(201, 169, 97, 0.2);
    background: rgba(20, 20, 25, 0.7);
  }

  .policy-item:hover::before {
    width: 2px;
  }

  .policy-item.highlight {
    background: rgba(201, 169, 97, 0.08);
    border: 1px solid rgba(201, 169, 97, 0.25);
  }

  .policy-item.highlight::before {
    width: 2px;
  }

  .policy-number {
    flex-shrink: 0;
    width: 56px;
    height: 56px;
    background: linear-gradient(
      135deg,
      rgba(201, 169, 97, 0.15) 0%,
      rgba(184, 148, 78, 0.1) 100%
    );
    border: 1px solid rgba(201, 169, 97, 0.3);
    color: #c9a961;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: "Cormorant Garamond", serif;
    font-size: 1.5rem;
    font-weight: 400;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .policy-item:hover .policy-number {
    background: linear-gradient(135deg, #c9a961 0%, #b8944e 100%);
    color: #0a0a0f;
    border-color: #c9a961;
    transform: scale(1.05);
  }

  .policy-content {
    flex: 1;
    position: relative;
  }

  .policy-title {
    font-family: "Cormorant Garamond", serif;
    font-size: 1.5rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 0.75rem;
    letter-spacing: 0.5px;
  }

  .policy-text {
    font-family: "Inter", sans-serif;
    font-size: 1rem;
    font-weight: 300;
    line-height: 1.9;
    color: rgba(255, 255, 255, 0.65);
    letter-spacing: 0.3px;
  }

  .policy-icon {
    position: absolute;
    top: 0;
    right: 0;
    font-size: 2.5rem;
    opacity: 0.35;
    transition: opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .policy-item:hover .policy-icon {
    opacity: 0.5;
  }

  .important-note {
    background: rgba(201, 169, 97, 0.08);
    backdrop-filter: blur(20px);
    border: 1px solid rgba(201, 169, 97, 0.25);
    border-left: 3px solid #c9a961;
    border-radius: 16px;
    padding: 2.5rem;
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
    position: relative;
    overflow: hidden;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) 1.2s both;
  }

  .important-note::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(201, 169, 97, 0.3),
      transparent
    );
  }

  .note-icon {
    font-size: 2rem;
    flex-shrink: 0;
    filter: grayscale(0);
    opacity: 1;
  }

  .note-content h4 {
    font-family: "Cormorant Garamond", serif;
    font-size: 1.5rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 0.75rem;
    letter-spacing: 0.5px;
  }

  .note-content p {
    font-family: "Inter", sans-serif;
    font-size: 1rem;
    font-weight: 300;
    line-height: 1.9;
    color: rgba(255, 255, 255, 0.7);
    letter-spacing: 0.3px;
  }

  /* CTA Section */
  .policies-cta {
    padding: 8rem 2rem;
    background: transparent;
    text-align: center;
    position: relative;
  }

  .policies-cta::before {
    content: "";
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 80%;
    max-width: 600px;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
  }

  .cta-title {
    font-family: "Cormorant Garamond", serif;
    font-size: 2.5rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 1rem;
    letter-spacing: 1px;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) 1.3s both;
  }

  .cta-text {
    font-family: "Inter", sans-serif;
    font-size: 1.1rem;
    font-weight: 300;
    color: rgba(255, 255, 255, 0.65);
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    letter-spacing: 0.3px;
    line-height: 1.8;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) 1.4s both;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) 1.5s both;
  }

  .cta-button {
    display: inline-block;
    padding: 1rem 2.5rem;
    text-decoration: none;
    border-radius: 4px;
    font-family: "Inter", sans-serif;
    font-size: 0.95rem;
    font-weight: 400;
    letter-spacing: 1px;
    text-transform: uppercase;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .cta-button::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      transparent,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    transition: left 0.6s ease;
  }

  .cta-button:hover::before {
    left: 100%;
  }

  .cta-button.primary {
    background: linear-gradient(135deg, #c9a961 0%, #b8944e 100%);
    color: #0a0a0f;
    border: 1px solid #c9a961;
  }

  .cta-button.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(201, 169, 97, 0.3);
    background: linear-gradient(135deg, #d4b66d 0%, #c9a961 100%);
  }

  .cta-button.secondary {
    background: transparent;
    color: rgba(255, 255, 255, 0.8);
    border: 1px solid rgba(255, 255, 255, 0.15);
  }

  .cta-button.secondary:hover {
    transform: translateY(-2px);
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(255, 255, 255, 0.3);
    color: rgba(255, 255, 255, 0.95);
  }

  /* Animations */
  .fade-in {
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .fade-in-delay {
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.3s both;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .policies-hero {
      padding: 10rem 2rem 5rem;
    }

    .page-title {
